// STAMINA BAR	//

	menuDef {
    	name "Stamina"
    	fullScreen MENU_FALSE
    	visible MENU_TRUE
		style WINDOW_STYLE_EMPTY
		border 1
		bordersize 1
		bordercolor .34 .35 .24 1
    	rect 10 400 10 70

		itemDef {
			name "stambar"
			decoration
			visible MENU_TRUE
			rect 0 0 8 68
			ownerdraw CG_STAMINA
